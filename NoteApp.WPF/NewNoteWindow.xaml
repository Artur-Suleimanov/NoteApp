<Window x:Class="NoteApp.WPF.NewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteApp.WPF"
        mc:Ignorable="d"
        Title="NewNoteWindow" Height="450" Width="800"
        FontSize="22" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="noteTitle" Margin="10 10" TextChanged="noteTitle_TextChanged" Focusable="True" LostFocus="noteTitle_LostFocus" GotFocus="noteTitle_GotFocus"></TextBox>
        <Button Grid.Row="1" Margin="100 100">dfdfg</Button>

    </Grid>
</Window>
